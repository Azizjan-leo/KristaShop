@model Module.Client.Admin.Admin.Models.GuestAccessLinkModel
@{
    ViewData["Title"] = "Пользователи - Ссылка для гостевого доступа";
}

<div class="main-container">
    <div class="row py-3">
        <div class="col">
            <h4 class="font-weight-bold">Создание гостевой ссылки</h4>
        </div>
        <div class="col d-flex justify-content-end">
            <a class="btn btn-main-info" asp-action="Index">
                <span class="btn-icon"><i class="fa fa-angle-double-left" aria-hidden="true"></i></span>
                Назад к списку
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form asp-action="GuestAccessLink" method="post">
                <div class="form-row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-12">
                        <div class="form-group my-0">
                            <label>Выберите каталог</label>
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" asp-for="IsPreoderVisible">
                                <label class="custom-control-label" asp-for="IsPreoderVisible"></label>
                            </div>
                        </div>
                        <div class="form-group my-0">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" asp-for="IsInstockByLinesVisible">
                                <label class="custom-control-label" asp-for="IsInstockByLinesVisible"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" asp-for="IsInstockByPartsVisible">
                                <label class="custom-control-label" asp-for="IsInstockByPartsVisible"></label>
                            </div>
                        </div>
                        <div class="form-group close-time">
                            <label asp-for="ExpiredDate" class="control-label"></label>
                            <div class="input-group date" id="datetimepicker" data-target-input="nearest" data-datetime-picker>
                                <input asp-for="ExpiredDate" type="text" class="form-control datetimepicker-input" data-target="#datetimepicker"/>
                                <div class="input-group-append" data-target="#datetimepicker" data-toggle="datetimepicker">
                                    <div class="input-group-text">
                                        <span class="btn-icon"><svg class="krista-icon krista-calendar"><use xlink:href="#krista-calendar"></use></svg></span>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="ExpiredDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-main-primary">Сгенерировать ссылку</button>
                        </div>
                    </div>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(ViewBag.GuestLink)) {
                <div class="form-row">
                    <div class="col-12">
                        <div class="form-group">
                            <label class="control-label">Гостевая ссылка</label>
                            <div class="input-group mb-3 jsGuestLinkWrapper">
                                <input type="text" class="form-control jsGuestLink" name="accesses-link" id="accesses-link" value="@ViewBag.GuestLink" readonly="readonly"/>
                                <div class="input-group-append">
                                    <button class="btn btn-primary jsCopyLink" type="button" title="Копировать ссылку">
                                        <i class="fa fa-copy"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css"/>
}

@section Scripts {
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.27.0/locale/ru.min.js"></script>

    <script src="/client-admin/js/Identity/GuestAccess.js" asp-append-version="true" type="text/javascript"></script>
    <script src="/common-admin/js/datetime-picker.js" asp-append-version="true" type="text/javascript"></script>
}