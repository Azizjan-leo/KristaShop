@model Module.App.Admin.Admin.Models.PromoLinkViewModel
@{
    ViewData["Title"] = "Промо ссылка - создать запись";
}

<div class="row d-flex justify-content-center">
    <div class="col-8">
        <div class="card">
            <div class="card-header">
                <div class="text-center">
                    <a asp-action="Index">
                        <i class="fa fa-arrow-left" aria-hidden="true"></i>
                        Назад к списку
                    </a>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="col-3 d-flex justify-content-center">
                            <div class="image-upload">
                                <label asp-for="VideoPreviewPath"></label>
                                <label asp-for="VideoPreview">
                                    <picture class="img-fluid img-thumbnail">
                                        <source srcset="/common/img/nophoto.png?width=250&format=webp" type="image/webp">
                                        <img srcset="/common/img/nophoto.png?width=250" class="img-fluid img-thumbnail"  width="250" />
                                    </picture>
                                </label>
                                <input asp-for="VideoPreview" type="file" data-img-uploader="img" />
                                <span asp-validation-for="VideoPreview" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-9">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="VideoPreviewPath"/>
                            <div class="form-group">
                                <label asp-for="Title" class="control-label"></label>
                                <input asp-for="Title" class="form-control form-control-sm" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Link" class="control-label"></label>
                                <input asp-for="Link" class="form-control form-control-sm" />
                                <span asp-validation-for="Link" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control form-control-sm html-editor" rows="5" cols="40"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="VideoPath" class="control-label"></label>
                                <input asp-for="VideoPath" class="form-control form-control-sm" />
                                <span asp-validation-for="VideoPath" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OrderForm" class="control-label"></label>
                                <select asp-for="OrderForm" asp-items="Model.OrderForms" class="selectpicker form-control show-menu-arrow" data-size="10" data-live-search="true" data-actions-box="true">
                                </select>
                            </div>
                            <div class="form-group close-time">
                                <label asp-for="DeactivateTime" class="control-label"></label>
                                <div class="input-group date" id="datetimepicker" data-target-input="nearest" data-datetime-picker>
                                    <input asp-for="DeactivateTime" type="text" class="form-control datetimepicker-input" data-target="#datetimepicker" />
                                    <div class="input-group-append" data-target="#datetimepicker" data-toggle="datetimepicker">
                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                    </div>
                                </div>
                                <span asp-validation-for="DeactivateTime" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block shadow">Подтвердить</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_WysiwygScriptsPartial");
    }
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.27.0/locale/ru.min.js"></script>

    <script src="/common-admin/js/ImgUploader.js" asp-append-version="true" type="text/javascript"></script>
    <script src="/common-admin/js/datetime-picker.js" asp-append-version="true" type="text/javascript"></script>
}