@{
    ViewData["Title"] = "Промо ссылки - Список";
}

<input type="hidden" id="shopPromoUrl" value="@ViewData["ShopPromoUrl"]"/>
<div class="row mb-3">
    <div class="col-auto mr-auto">
        <a asp-action="Create">Новая запись</a>
    </div>
    <div class="col-auto ml-auto">
        <a asp-action="Execute" asp-controller="Import" asp-area="Admin" class="btn btn-sm btn-primary mr-1" type="button"><i class="fas fa-arrow-circle-left"></i> Назад</a>
    </div>
</div>

<hr />
<div class="col-12 table-responsive">
    <table class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>№</th>
                <th>Заголовок</th>
                <th>Ссылка</th>
                <th>Из раздела</th>
                <th>Действительна до</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Styles {
    <link href="https://cdn.datatables.net/rowreorder/1.2.6/css/rowReorder.bootstrap4.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="https://cdn.datatables.net/rowreorder/1.2.6/js/dataTables.rowReorder.min.js" type="text/javascript"></script>
    <script src="/app-admin/js/promo-links.js" asp-append-version="true" type="text/javascript"></script>
}