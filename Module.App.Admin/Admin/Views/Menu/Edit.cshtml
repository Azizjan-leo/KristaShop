@using Module.Common.Admin.Admin.Models
@using KristaShop.Common.Enums
@model Module.App.Admin.Admin.Models.MenuItemViewModel
@{
    ViewData["Title"] = "Пункт меню - Изменить запись";
    ViewData["NavbarButtons"] = new List<MenuButtonsViewModel> {
        new("Назад к списку", "Index", classes: "btn-main-info")
    };
}

<div class="main-container">
    <div class="row py-3">
        <div class="col">
            <h4 class="font-weight-bold">@Model.Title</h4>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id"/>
                <div class="form-group">
                    <label asp-for="MenuType" class="control-label"></label>
                    <select asp-for="MenuType" asp-items="Html.GetEnumSelectList<MenuType>()" class="form-control form-control-sm"></select>
                    <span asp-validation-for="MenuType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control form-control-sm"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AreaName" class="control-label"></label>
                    <input asp-for="AreaName" class="form-control form-control-sm"/>
                    <span asp-validation-for="AreaName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ControllerName" class="control-label"></label>
                    <input asp-for="ControllerName" class="form-control form-control-sm"/>
                    <span asp-validation-for="ControllerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ActionName" class="control-label"></label>
                    <input asp-for="ActionName" class="form-control form-control-sm"/>
                    <span asp-validation-for="ActionName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="URL" class="control-label"></label>
                    <input asp-for="URL" class="form-control form-control-sm"/>
                    <span asp-validation-for="URL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Icon" class="control-label"></label>
                    <input asp-for="Icon" class="form-control form-control-sm"/>
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Order" class="control-label"></label>
                    <input asp-for="Order" class="form-control form-control-sm"/>
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ParentId" class="control-label"></label>
                    <select asp-for="ParentId" asp-items="Model.MenuItems" class="selectpicker form-control show-menu-arrow" data-size="10" data-live-search="true" data-actions-box="true">
                        <option value=""></option>
                    </select>
                    <span asp-validation-for="ParentId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BadgeTarget" class="control-label"></label>
                    <input asp-for="BadgeTarget" class="form-control form-control-sm"/>
                    <span asp-validation-for="BadgeTarget" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-main-primary">Подтвердить</button>
                </div>
            </form>
        </div>
    </div>
</div>