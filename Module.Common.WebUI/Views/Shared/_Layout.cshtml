    <partial name="_LayoutStylesPartial" />
    @await RenderSectionAsync("Styles", false)
    @Html.SetMetaInfo()
</head>
<body class="position-relative">
    <environment names="Production">
        <!-- Google Tag Manager (noscript) -->
        <noscript>
            <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WCQ3RLC" height="0" width="0" style="display:none;visibility:hidden"></iframe>
        </noscript>
        <!-- End Google Tag Manager (noscript) -->
        <!-- Facebook Pixel Code -->
        <noscript>
            <img height="1" width="1" src="https://www.facebook.com/tr?id=404144110796795&ev=PageView&noscript=1" alt=""/>
        </noscript>
        <!-- End Facebook Pixel Code -->
    </environment>

    @Html.AntiForgeryToken()

<partial name="_Navbar"/>
<div class="content mb-3">
        @RenderBody()
    </div>
    <partial name="_Footer" />
    <script>
        // Lazyload scipt - script for lazy loading images
        // position of the script is required by library, for it to work correct, don't move
        var lazyload = new LazyLoad({
            thresholds: "200% 0px"
        });
        lazyload.update();
    </script>

    <partial name="_LayoutScriptsPartial" />
    @await RenderSectionAsync("Scripts", false)
    <script type="text/javascript">
    $(function() {
        showOperationResultNotificationFromString('@Html.GetNotification()');
    });
    </script>
</body>
</html>