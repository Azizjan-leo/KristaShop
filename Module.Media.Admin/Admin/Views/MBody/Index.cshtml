@{
    ViewData["Title"] = "Контент статичных страниц";
    ViewData["NavbarButtons"] = new List<MenuButtonsViewModel> {
        new("Сбросить кэш", "ReloadCache"),
        new("Создать страницу", "Create", "", "krista-plus")
    };
}
<div class="row">
    <div class="col pb-4">
        <h4 class="h4 font-weight-bold">@ViewData["Title"]</h4>
    </div>
</div>
<div class="col-12 table-responsive">
    <table class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Порядок</th>
                <th>Заглавие</th>
                <th>Алиас</th>
                <th>Макет</th>
                <th>Действия</th>
