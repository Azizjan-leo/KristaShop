@model KristaShop.Common.Models.Filters.PaymentsReportFilter
    <div class="dataTables_customSearchWrapper border-0 p-0">
        <form asp-action="PaymentsHistory" method="post">
            <div class="form-row">
                <div class="form-group col-4">
                    <select asp-for="Cities" asp-items="Model.CitiesSelect" class="selectpicker form-control show-menu-arrow" data-size="10" data-live-search="true" multiple data-actions-box="true" title="Город" data-target-col="articul">
                    </select>
                </div>
                <div class="form-group col-4">
                    <select asp-for="Partners" asp-items="Model.PartnersSelect" class="selectpicker form-control show-menu-arrow" data-size="10" data-live-search="true" multiple data-actions-box="true" title="Партнер" data-target-col="colorId">
                    </select>
                </div>
                <div class="form-group col-4">
                    <select asp-for="Managers" asp-items="Model.ManagersSelect" class="selectpicker form-control show-menu-arrow" data-size="10" data-live-search="true" multiple data-actions-box="true" title="Менеджер" data-target-col="cityId">
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-6">
                    <input asp-for="Date" class="form-control flatpickr flatpickr-input active" data-val="false" value="@Model.Date.ToString()" data-date-period-picker type="text" placeholder="Выберите период"/>
                </div>
                <div class="form-group col-6">
                    <select asp-for="DocumentTypes" asp-items="Model.DocumentTypesSelect" class="selectpicker form-control show-menu-arrow" data-size="10" data-live-search="true" multiple data-actions-box="true" title="По типу выплаты" data-target-col="managerId">
                    </select>
                </div>
            </div>
            <div class="form-row justify-content-end">
                <div class="form-group col-4">
                    <button type="button" class="btn btn-main-danger btn-block" onclick="ResetReportFilter();">Сбросить фильтр</button>
                </div>
                <div class="form-group col-4">
                    <button type="submit" class="btn btn-main-primary btn-block" id="filterSubmitBtn">Применить фильтр</button>
                </div>
            </div>
        </form>
    </div>