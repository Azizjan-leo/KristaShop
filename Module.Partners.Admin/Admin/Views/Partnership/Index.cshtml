@using KristaShop.Common.Extensions
@using Module.Common.WebUI.Infrastructure
@model (Module.Common.Business.Models.ItemsGroupedBase<Module.Partners.Business.DTOs.PartnerDTO, Module.Partners.Business.DTOs.PartnersTotalsDTO> Partners, KristaShop.Common.Models.Filters.PartnersFilter Filter)
@{
    ViewData["Title"] = "Партнеры";
}

<div class="row m-0 mb-4">
    <div class="col-12 px-0 pb-4">
        <h4 class="h4 font-weight-bold">@ViewData["Title"]</h4>
    </div>
    <div class="col-12 px-0">
        <div class="dataTables_customTotalsWrapper p-4 mb-2">
            <div class="form-row">
                <div class="form-group col-4">
                    <label>Итого единиц</label>
                    <input type="text" class="form-control" readonly="readonly" value="@Model.Partners.Totals.TotalAmount">
                </div>
                <div class="form-group col-4">
                    <label>Итого единиц в пути</label>
                    <input type="text" class="form-control" readonly="readonly" value="@Model.Partners.Totals.TotalShippedAmount">
                </div>
                <div class="form-group col-4">
                    <label>Общий долг по партнерам</label>
                    <input type="text" class="form-control" readonly="readonly" value="@Model.Partners.Totals.TotalDebt.ToTwoDecimalPlaces()$">
                </div>
            </div>
            <div class="form-row pt-2">
                <div class="form-group col-12 mb-0">
                    <a asp-action="SalesReport" class="btn btn-main-primary font-weight-bold mr-2">Отчет по продажам</a>
                    <a asp-action="PaymentsHistory" class="btn btn-main-primary font-weight-bold">История по взаиморасчетам</a>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="Partials/_SearchPartnerPartial" model="Model.Filter" />
<br />
<div class="col-12 table-responsive">
    <table class="table table-striped table-bordered text-break" style="width:100%">
        <thead>
            <tr>
                <th>Партнер</th>
                <th>Имя</th>
                <th>Логин</th>
                <th>Контакты</th>
                <th>Email</th>
                <th>Телефон</th>
                <th>Город и название ТЦ</th>
                <th>Менеджер</th>
                <th>В пути</th>
                <th>На складе</th>
                <th>Долг</th>
                <th>Ревизия</th>
                <th>Выплата</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
      <script type="text/javascript">
        const dataModel = @Html.AsJsObject(Model.Partners.Items);
      </script>
    <script src="/partners-admin/js/Partnership/Index.js" asp-append-version="true" type="text/javascript"></script>
    <script src="/common-admin/js/datetime-picker.js" asp-append-version="true" type="text/javascript"></script>
}