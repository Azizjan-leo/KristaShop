@{
    Layout = "_PartnersLayout";
}
<div class="container-fluid px-0 mb-4 pb-2">
    <div class="row border rounded-1 mx-0">
        <div class="col-auto p-1">
            <a asp-area="Partners" asp-controller="SellingRequests" asp-action="Index" class="btn btn-basic btn-main-white mr-2 @Html.IsActionSelected("SellingRequests", "Index")">Запрос на реализацию</a>
        </div>
    </div>
</div>
@RenderBody()

@section Styles {
    @await RenderSectionAsync("Styles", false)
}

@section Scripts {
    <script src="/common/js/core/constants.js" asp-append-version="true" type="text/javascript"></script>
    @await RenderSectionAsync("Scripts", false)
}