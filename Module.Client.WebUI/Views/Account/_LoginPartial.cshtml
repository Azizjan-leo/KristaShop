@model Module.Client.WebUI.Models.LoginViewModel
<div class="ajax-post-form">
    <form method="post" asp-action="Login" asp-controller="Account">
        <div class="ajax-post-form-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col">
                    <label asp-for="UserName" class="sr-only"></label>
                    <input asp-for="UserName" class="form-control grey-control main-font h5 rounded-0" placeholder="Логин"/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col">
                    <label asp-for="Password" class="sr-only"></label>
                    <input asp-for="Password" class="form-control grey-control main-font h5 rounded-0" placeholder="Пароль" autocomplete="on"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="row align-items-center">
                <div class="col-auto mr-auto">
                    <div class="form-group">
                        <div class="custom-control custom-checkbox main-font h5">
                            <input type="checkbox" class="custom-control-input grey-control" asp-for="RememberMe">
                            <label asp-for="RememberMe" class="custom-control-label">Запомнить меня</label>
                        </div>
                    </div>
                </div>
                <div class="col-auto align-self-center">
                    <div class="form-group pt-2">
                        <a class="link-base link-dark plain main-font h5" data-toggle="collapse" href="#loginFooterCollapse" role="button" aria-expanded="false" aria-controls="loginFooterCollapse">Забыл пароль</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-basic btn-main-gradient-linear text-uppercase py-2 w-100 pb-1 pt-2">Войти</button>
        </div>
    </form>
</div>