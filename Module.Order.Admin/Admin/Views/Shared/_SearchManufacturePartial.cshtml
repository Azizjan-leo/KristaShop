@model Module.Order.Admin.Admin.Models.OrdersFilter
<div class="dataTables_customSearchWrapper">
    <div class="form-row px-3 pb-4">
        <h4 class="font-weight-bold">Фильтр</h4>
    </div>
    <div class="form-row">
        <div class="form-group col-sm-12 col-md-2 col-lg-2">
            <label asp-for="Manager"></label>
            <select asp-for="Manager" asp-items="@ViewBag.ManagersList" class="selectpicker form-control show-menu-arrow" data-size="10" data-live-search="true" data-actions-box="true" data-target-col="managerFullName">
                <option value="">Все</option>
                <option value="---">Без менеджера</option>
            </select>
        </div>
        <div class="form-group col-sm-12 col-md-3 col-lg-3">
            <label asp-for="ClientFullName"></label>
            <input type="text" asp-for="ClientFullName" class="form-control order-input" data-target-col="userFullName" />
        </div>
        <div class="form-group col-sm-12 col-md-2 col-lg-3">
            <label asp-for="CityName"></label>
            <input type="text" asp-for="CityName" class="form-control order-input" data-target-col="cityName" />
        </div>
    </div>
    <div class="form-row px-1 pt-4">
        <button class="btn btn-main-danger" onclick="ResetOrderAllValues()">Сбросить фильтр</button>
    </div>
</div>
