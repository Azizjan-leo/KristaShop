@model Module.Order.Admin.Admin.Models.PreOrderModelFilter


<div class="dataTables_customSearchWrapper">
    <div class="form-row px-3 pb-4">
        <h4 class="font-weight-bold">Фильтр</h4>
    </div>
    <div class="form-row">
        <div class="form-group col-sm-12 col-md-6 col-lg-4">
            <label asp-for="Articul"></label>
            <input type="text" asp-for="Articul" class="form-control order-input" data-target-col="articul" />
        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-4">
            <label asp-for="ColorId"></label>
            <select asp-for="ColorId" asp-items="@ViewBag.ColorsList" class="selectpicker form-control show-menu-arrow" data-size="10" data-live-search="true" data-actions-box="true" data-target-col="colorId">
                <option value="">Все</option>
            </select>
        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-4">
            <label asp-for="SizeValue"></label>
            <select asp-for="SizeValue" asp-items="@ViewBag.SizesList" class="selectpicker form-control show-menu-arrow" data-size="10" data-live-search="true" data-actions-box="true" data-target-col="sizeValue">
                <option value="">Все</option>
            </select>
        </div>
    </div>
    <div class="form-row px-1 pt-4">
        <button class="btn btn-main-danger" onclick="ResetOrderAllValues()">Сбросить фильтр</button>
    </div>
</div>
