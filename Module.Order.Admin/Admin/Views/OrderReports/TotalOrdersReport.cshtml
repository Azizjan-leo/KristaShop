@model IEnumerable<Module.Order.Business.Models.OrderDetailsDTO>
@{
    ViewData["Title"] = "Сводный отчет по заказам";
}
<partial name="_SearchOrdersReportPartial" model="ViewBag.FilterData" />

<div class="col-12 table-responsive">
    <table class="table table-striped table-bordered text-break order-details th-left w-100">
        <thead>
            <tr>
                <th></th>
                <th>Информация о модели</th>
                <th>Цвета</th>
                <th>Линейки</th>
                <th>Единицы</th>
                <th>На сумму</th>
                <th>Действия</th>
            </tr>
        </thead>
    </table>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />
}

@section Scripts {
    <script type="text/javascript">
        var dataModel = @Html.AsJsObject(Model);
    </script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="/order-admin/js/Orders/OrdersReport.js" asp-append-version="true" type="text/javascript"></script>
    <script src="/common-admin/js/datetime-picker.js" asp-append-version="true" type="text/javascript"></script>
}