@model IEnumerable<Module.Order.Business.Models.OrderDetailsDTO>
@{
    ViewData["Title"] = "Сводный отчет по необработанному предзаказу";
}
<partial name="_SearchPreOrderReportPartial" model="null" />
<div class="row">
    <div class="col-auto pb-4 pt-5">
        <h2>@ViewData["Title"]</h2>
        <h4 class="h4 font-weight-bold"><small>Единиц: </small><span class="jsTotalAmount">@ViewBag.TotalAmount</span> <small>На сумму: </small><span class="jsTotalSum">@ViewBag.TotalSumm</span> $</h4>
    </div>
</div>

<div class="col-12 table-responsive">
    <table class="table table-striped table-bordered text-break order-details th-left" style="width:100%">
        <thead>
            <tr>
                <th width="110px">Фото</th>
                <th>Артикул</th>
                <th>Цвет</th>
                <th></th>
                <th>Размер</th>
                <th>Единиц</th>
                <th>Цена ($)</th>
                <th>Сумма ($)</th>
                <th>Действия</th>
            </tr>
        </thead>
    </table>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />
}

@section Scripts {
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="/order-admin/js/Orders/PreOrderReport.js" asp-append-version="true" type="text/javascript"></script>
    <script src="/common-admin/js/datetime-picker.js" asp-append-version="true" type="text/javascript"></script>
}