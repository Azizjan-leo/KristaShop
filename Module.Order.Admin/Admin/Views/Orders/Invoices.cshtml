@{
    ViewData["Title"] = "Счета на оплату";
}
<partial name="_LinkPartial" />
<partial name="_SearchInvoicesPartial" model="null" />

<div class="row">
    <div class="col-12 pb-4 pt-5">
        <h4 class="h4 font-weight-bold" style="width: 100%;">@ViewData["Title"]</h4>
    </div>
</div>

<div class="col-12 table-responsive">
    <table class="table table-striped table-bordered text-break" style="width:100%">
        <thead>
            <tr>
                <th>Дата<br /><small>(ГГГГ.ММ.ДД)</small></th>
                <th>№ документа</th>
                <th>Клиент</th>
                <th>Город</th>
                <th>Менеджер</th>
                <th>Предоплата</th>
                <th>К оплате</th>
                <th>Курс</th>
                <th><i class="fa fa-check-circle"></i></th>
                <th>Действия</th>
            </tr>
        </thead>
    </table>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />
}

@section Scripts {
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="/order-admin/js/Orders/Invoices.js" asp-append-version="true" type="text/javascript"></script>
    <script src="/common-admin/js/datetime-picker.js" asp-append-version="true" type="text/javascript"></script>
}