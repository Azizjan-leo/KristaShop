@using KristaShop.Common.Extensions
@using Module.Common.WebUI.Infrastructure
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/common/favicon.png" asp-append-version="true">
    <title>@ViewData["Title"] - Krista</title>
    <link rel="stylesheet" href="/common/lib/twitter-bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/common/lib/font-awesome/css/all.min.css">
    <link rel="stylesheet" href="/common-admin/adminlte/css/adminlte.min.css" asp-append-version="true">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/autofill/2.3.5/css/autoFill.bootstrap4.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.6.5/css/buttons.bootstrap4.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/colreorder/1.5.3/css/colReorder.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.6/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/rowreorder/1.2.7/css/rowReorder.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/searchbuilder/1.0.1/css/searchBuilder.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/searchpanes/1.2.2/css/searchPanes.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/select/1.3.1/css/select.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.6.9/flatpickr.min.css" integrity="sha512-OtwMKauYE8gmoXusoKzA/wzQoh7WThXJcJVkA29fHP58hBF7osfY0WLCIZbwkeL9OgRCxtAfy17Pn3mndQ4PZQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="/common/css/core/bootstrap-extensions.css" asp-append-version="true" />
    <link rel="stylesheet" href="/common/css/core/bootstrap-customization.css" asp-append-version="true" />
    <link rel="stylesheet" href="/common/css/core/sweetalert-customization.css" asp-append-version="true" />
    <link rel="stylesheet" href="/common/css/core/base-backgrounds.css" asp-append-version="true" />
    <link rel="stylesheet" href="/common-admin/css/site-back.css" asp-append-version="true" />
    <link rel="stylesheet" href="/common-admin/css/admin-fonts.css" asp-append-version="true" />
    <link rel="stylesheet" href="/common-admin/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="/common-admin/css/admin-buttons.css" asp-append-version="true" />
    <link rel="stylesheet" href="/common-admin/css/krista-icons.css" asp-append-version="true" />
    <link rel="stylesheet" href="/common-admin/css/adminlte-customization.css" asp-append-version="true" />
    <link rel="stylesheet" href="/common/css/core/datatables-customization.css" asp-append-version="true" />
    <link rel="stylesheet" href="/common/css/base.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)

</head>
<body class="hold-transition sidebar-mini sidebar-collapse sidebar-left-offset fixed mb-0 bg-main">
    <!-- Site wrapper -->
    <div class="wrapper" @Html.Raw(User.Identity.IsAuthenticated && !User.IsGuest() ? $"data-updatable=\"true\" data-route=\"{Url.Action("GetTopMenuValues", "Dashboard")}\" data-update=\"always\" data-interval=\"15\" data-update-callback=\"topDashboardUpdated\"" : "")>
        @if (User.Identity.IsAuthenticated && !User.IsGuest()) {
            @await Component.InvokeAsync("NavbarBasic", new { controller = ViewData["NavbarControllerName"] })
            <partial name="_Sidebar" />
        }
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <main role="main">
                        @RenderBody()
                    </main>
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <script src="/common/lib/jquery/dist/jquery.min.js"></script>
        <script src="/common/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="/common/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script src="/common/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
        <script src="/common/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
        <script src="/common/lib/lodash-4.17.15/lodash.js"></script>

        <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap4.min.js"></script>
        <script src="https://cdn.datatables.net/autofill/2.3.5/js/dataTables.autoFill.min.js"></script>
        <script src="https://cdn.datatables.net/autofill/2.3.5/js/autoFill.bootstrap4.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/1.6.5/js/dataTables.buttons.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/1.6.5/js/buttons.bootstrap4.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/1.6.5/js/buttons.colVis.min.js"></script>
        <script src="https://cdn.datatables.net/colreorder/1.5.3/js/dataTables.colReorder.min.js"></script>
        <script src="https://cdn.datatables.net/responsive/2.2.6/js/dataTables.responsive.min.js"></script>
        <script src="https://cdn.datatables.net/responsive/2.2.6/js/responsive.bootstrap4.min.js"></script>
        <script src="https://cdn.datatables.net/rowreorder/1.2.7/js/dataTables.rowReorder.min.js"></script>
        <script src="https://cdn.datatables.net/searchbuilder/1.0.1/js/dataTables.searchBuilder.min.js"></script>
        <script src="https://cdn.datatables.net/searchbuilder/1.0.1/js/searchBuilder.bootstrap4.min.js"></script>
        <script src="https://cdn.datatables.net/searchpanes/1.2.2/js/dataTables.searchPanes.min.js"></script>
        <script src="https://cdn.datatables.net/searchpanes/1.2.2/js/searchPanes.bootstrap4.min.js"></script>
        <script src="https://cdn.datatables.net/select/1.3.1/js/dataTables.select.min.js"></script>
        <script src="/common/lib/datatables-rowsGroups/datatables-rowsGroups.js" asp-append-version="true"></script>
        <script src="/common/js/core/datatables-rowsGroupsSort.js" asp-append-version="true" type="text/javascript"></script>
        <script src="/common/js/core/datatables-customization.js" asp-append-version="true"></script>
        <script src="/common-admin/adminlte/js/adminlte.min.js" asp-append-version="true"></script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/i18n/defaults-ru_RU.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.all.min.js" integrity="sha256-BCA32nU+myeLCd/w96c+FjtijDVZiEQuuYOJMSLF7Uk=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.28.0/moment.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.28.0/locale/ru.min.js"></script>
        <script src="https://cdn.datatables.net/plug-ins/1.10.21/sorting/datetime-moment.js"></script>
        <script src="/common/js/core/notifications.js" asp-append-version="true"></script>
        <script src="/common/js/core/core.js" asp-append-version="true"></script>
        <script src="/common/js/core/types.js" asp-append-version="true"></script>
        <script src="/common/js/core/background-updatable.js" asp-append-version="true"></script>
        <script src="/common-admin/js/admin-base.js" asp-append-version="true"></script>
        <script src="/common/lib/icomoon-svg-loader/svgxuse.js" asp-append-version="true"></script>
        <script src="/common/js/core/localstorage-filters.js" asp-append-version="true"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.6.9/flatpickr.min.js" integrity="sha512-+ruHlyki4CepPr07VklkX/KM5NXdD16K1xVwSva5VqOVbsotyCQVKEwdQ1tAeo3UkHCXfSMtKU/mZpKjYqkxZA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.6.9/l10n/ru.min.js" integrity="sha512-iroHsXu3u9hn51N59WgDAVQatymvZBcTmJAT6ByZoZTe/+Ccw1Gdnay91Gzrwd8Dauhv2CYiTgHM8FXRC2/31A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script>window.flatpickr.l10ns.ru.rangeSeparator = " - "</script>
        @RenderSection("Scripts", required: false)
        <partial name="_IconsSvg" />
        <script type="text/javascript">
            $(function () {
                showOperationResultNotificationFromString('@Html.GetNotification()');
            });
        </script>
    </div>
</body>
</html>