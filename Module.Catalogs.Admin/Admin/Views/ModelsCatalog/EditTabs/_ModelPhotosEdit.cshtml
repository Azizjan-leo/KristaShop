@model Module.Catalogs.Admin.Admin.Models.Model1CViewModel
<div class="container-fluid pt-5">
    <div class="row mt-2">
        <partial name="_ReorderModal" />
        <div class="mx-2 pb-4 px-4 w-100">
            <div class="custom-file py-4">
                <input type="file" id="Photos" name="Photos" class="custom-file-input" multiple>
                <label class="custom-file-label" for="Photos" data-browse="Обзор">Выберите фото, одно или несколько</label>
            </div>
        </div>

        <div class="modal fade bd-example-modal-lg" id="resize-photo-modal">
            <div class="modal-dialog modal-dialog-centered modal-xl">
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h4 class="modal-title w-100 font-weight-bold">Обрезка фото</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="photo-resize-id" id="photo-resize-id" />
                        <div class="form-row">
                            <div class="col-6 text-center">
                                <img src="data:," id="resizingPhoto" class="img-fluid" alt="Alternate Text" />
                            </div>
                            <div class="col-6 text-center">
                                <div id="result"></div>
                            </div>
                        </div>
                        <div class="form-row my-3">
                            <div class="col-6 text-center">
                                <button type="button" class="btn btn-warning" id="btnCrop"><i class="fa fa-cut"></i> Обрезать изображение</button>
                            </div>
                            <div class="col-6 text-center">
                                <button type="button" class="btn btn-success" id="btnSaveCrop"><i class="fa fa-save"></i> Сохранить изображение</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="edit-photo-modal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h4 class="modal-title w-100 font-weight-bold">Добавить цвет</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="PhotoId" id="PhotoId" />
                        <div class="form-group">
                            <label for="ColorId" class="control-label"></label>
                            <select id="ColorId" name="ColorId" asp-items="ViewBag.Colors" class="form-control">
                                <option value="">Нет цвета</option>
                            </select>
                        </div>
                        <div class="form-group text-center">
                            <input type="button" onclick="EditPhotoEvent()" class="btn btn-success btn-sm btn-block" value="Сохранить">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 table-responsive">
            <table id="photos-table" class="table table-striped table-bordered" style="width: 100%">
                <thead>
                    <tr>
                        <th>Порядок</th>
                        <th>Фото</th>
                        <th>Цвет</th>
                        <th>Действия</th>
                    </tr>
                </thead>
            </table>
        </div>
        <div class="p-4 mx-2"><button class="btn btn-main-primary mt-2" type="submit">Сохранить изменения</button></div>
    </div>
</div>