@using KristaShop.Common.Extensions
@using Module.Common.Admin.Admin.Models
@using Module.Common.WebUI.Infrastructure
@model (KristaShop.Common.Enums.CatalogType Catalog, IEnumerable<Module.Catalogs.Admin.Admin.Models.AdminCatalogItemBriefViewModel> Items)
@{
    ViewData["Title"] = $"Модели - каталог {Model.Catalog.GetDisplayName()}";
    ViewData["NavbarButtons"] = new List<MenuButtonsViewModel> {
        new("Назад к каталогам", "Index", "Catalog", classes: "btn-main-info")
    };
}

<input type="hidden" asp-for="Catalog" value="@((int) Model.Catalog)" id="catalogId"/>
<partial name="_ReorderModal" />
<partial name="_SearchModelPartial" />

<div class="row">
    <div class="col pb-4 pt-5">
        <h4 class="h4 font-weight-bold">@Model.Catalog.GetDisplayName()</h4>
    </div>
</div>

<div class="col-12 table-responsive">
    <table class="table table-striped table-bordered text-break" style="width: 100%">
        <thead>
            <tr>
                <th>Порядок</th>
                <th>Дата</th>
                <th>Артикул</th>
                <th>Наименование</th>
                <th>Цвет</th>
                <th>Размер</th>
                <th>Цена</th>
                <th>Кол-во</th>
                <th>Каталог</th>
                <th>Категория</th>
                <th>Видимость</th>
                <th>Действия</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script>
        const dataModel = @Html.AsJsObject(Model.Items);
    </script>
    <script src="/catalogs-admin/js/ModelsCatalog/IndexByCatalog.js" asp-append-version="true" type="text/javascript"></script>
}